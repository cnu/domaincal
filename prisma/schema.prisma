generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          BigInt        @id @default(autoincrement())
  email       String        @unique
  password    String
  lastLoginAt DateTime?     @map("last_login_at")
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime?     @updatedAt @map("updated_at")
  domains     UserDomain[]

  @@index([email])
  @@map("users")
}

model Domain {
  id                BigInt        @id @default(autoincrement())
  name              String        @unique
  registrar         String?
  emails            String?
  domainExpiryDate  DateTime?     @map("domain_expiry_date")
  domainCreatedDate DateTime?     @map("domain_created_date")
  domainUpdatedDate DateTime?     @map("domain_updated_date")
  lastRefreshedAt  DateTime?     @map("last_refreshed_at")
  response          Json?
  createdAt        DateTime      @default(now()) @map("created_at")
  updatedAt        DateTime      @updatedAt @map("updated_at")
  users            UserDomain[]

  @@index([name])
  @@map("domains")
}

model UserDomain {
  id        BigInt   @id @default(autoincrement())
  userId    BigInt   @map("user_id")
  domainId  BigInt   @map("domain_id")
  createdAt DateTime @default(now()) @map("created_at")
  domain    Domain   @relation(fields: [domainId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, domainId])
  @@index([userId])
  @@index([domainId])
  @@map("user_domains")
}
